@model IEnumerable<HMS.Entity.EmployeeDetail>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "button-link", @style = "padding-top:5px;" })
</p>
<table id="employeeTable">
    <thead>
        <tr>
            <th>
                Employee Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobileNo)
            </th>
            <th>
                Alternate No.
            </th>
            <th>
                Branch
            </th>
            <th>
                City
            </th>
            <th>
                Employee Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title.Name) @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.MiddleName) @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OtherContactNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchDetail.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeType.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) @*|
    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
    @Html.ActionLink("Delete", "Delete", new { id = item.ID })*@
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $('#employeeTable').DataTable({            //"bPaginate": false,
        "bLengthChange": false,
        //"bFilter": true,
        //"bInfo": false,
        //"bAutoWidth": false,
        //"info":     false,
        "aoColumnDefs": [
            { 'bSortable': false, 'aTargets': [3] }
        ]
    });
</script>