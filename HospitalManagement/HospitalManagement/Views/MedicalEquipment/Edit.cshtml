            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="button-link" />&nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("Back to List", "Index", null, new { @class="button-link"})
            </div>
        </div>
    </div>
