@model HMS.Entity.PatientVisit

@{
    ViewBag.Title = "Out Patient Slip";
    this.Layout = null;
}

<div>
    <div class="col-md-6">
        <h4>Out Patient Slip</h4>
    </div>
    <div class="col-md-6 no-print" style=" text-align: right; padding-right: 50px;">
