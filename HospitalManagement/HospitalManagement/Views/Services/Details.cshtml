@model HMS.Entity.Service

@{
    ViewBag.Title = "Hospital Management | Service details";
    this.Layout = null;
}

<div>
    <h4>Service Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, htmlAttributes: new { @class = "button-link", @style = "padding-top:5px;", @id = "serviceDetailEdit" }) |
    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "button-link", @style = "padding-top:5px;" })
</p>
 <script>
     $(function () {
         $('#serviceDetailEdit').click(function () {
             var url = $(this).attr('href');
             $('#serviceBody').html('');
             $('#serviceBody').load(url, function () {
                 $('#serviceModal').modal({
                     keyboard: true
                 }, 'show');
                 bindServiceForm(this);
             });
             return false;
         });
     });
 </script>