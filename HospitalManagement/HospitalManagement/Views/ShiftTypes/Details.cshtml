@model HMS.Entity.ShiftType

@{
    ViewBag.Title = "Details";
    this.Layout = null;
}


<div>
    <h4>Details: @Model.Name</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, htmlAttributes: new { @class = "button-link", @style = "padding-top:5px;", @id="editDetailShift" }) |
    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "button-link", @style = "padding-top:5px;" })
</p>
 <script>
     $(function () {
         $('#editDetailShift').click(function () {
             var url = $(this).attr('href');
             $('#shiftTypeBody').html('');
             $('#shiftTypeBody').load(url, function () {
                 $('#shiftTypeModal').modal({
                     keyboard: true
                 }, 'show');
                 bindShiftTypeForm(this);
             });
             return false;
         });
     });
 </script>